# Firebase Configuration
# Get these from your Firebase Console -> Project Settings -> General
VITE_FIREBASE_API_KEY=your_firebase_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=1234567890
VITE_FIREBASE_APP_ID=1:1234567890:web:abcdef123456

# Signaling Server Configuration
VITE_SIGNALING_SERVER=https://mcp-signal.workers.dev

# Development Mode (only for development)
VITE_DEV=true

# Security Configuration
VITE_CSP_ENABLED=true
VITE_RATE_LIMIT_ENABLED=true
VITE_SESSION_TIMEOUT=1800000

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_CRASH_REPORTING=false
VITE_ENABLE_PERFORMANCE_MONITORING=false

# Logging Configuration
VITE_LOG_LEVEL=warn
VITE_ENABLE_DEBUG_LOGS=false

# API Configuration
VITE_API_TIMEOUT=10000
VITE_MAX_FILE_SIZE=10485760
VITE_MAX_REQUEST_SIZE=1048576
